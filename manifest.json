{
    "manifest_version": 3,
    "name": "No Coal Please",
    "version": "1.0",
    "description": "Adds a 'Not Interested' shortcut button to twitter posts on the 'For You' page",
    "content_scripts": [
        {
            "matches": [
                "*://x.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}