{
  "manifest_version": 3,
  "name": "No Coal Please",
  "version": "1.0.2",
  "description": "Adds a 'Not Interested' shortcut button to twitter posts on the 'For You' page",
  "content_scripts": [
    {
      "matches": ["*://x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/explosion.gif", "assets/coal-alarm.png"],
      "matches": ["*://x.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "permissions": ["storage"]
}
